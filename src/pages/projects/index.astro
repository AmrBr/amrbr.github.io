---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import BaseLayout from "../../components/layout/BaseLayout.astro";
import BaseHero from "../../components/shared/BaseHero.astro";
import Container from "../../components/ui/Container.astro";
import ContentList from "../../components/shared/ContentList.astro";

type Project = CollectionEntry<"projects">;

const projects = await getCollection("projects");
const sortedProjects = projects.sort((a: Project, b: Project) => 
  a.data.title.localeCompare(b.data.title)
);
---

<BaseLayout title="Projects" description="My portfolio of projects and applications">
  <Container>
    <BaseHero title="Projects" description="My portfolio of projects and applications" />

    <ContentList>
      {
        sortedProjects.map((project) => (
          <article>
            <div class="title-row">
              <a href={project.data.url} target="_blank" rel="noopener noreferrer">
                {project.data.title}
              </a>
            </div>
            <p class="muted-text">{project.data.description}</p>
            {project.data.techs && (
              <div class="tags">
                {project.data.techs.map((tech) => (
                  <span>{tech}</span>
                ))}
              </div>
            )}
          </article>
        ))
      }
    </ContentList>
  </Container>
</BaseLayout>

<style>
  .title-row {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
    font-size: var(--text-sm);
  }

  .title-row a {
    font-size: var(--text-lg);
    text-decoration: none;
    color: var(--text-color);
  }

  .title-row a:hover {
    color: var(--link-color);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .tags span {
    font-size: var(--text-xs);
    opacity: 0.5;
    white-space: nowrap;
  }
</style> 